<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarSistema">

    <EditText
        android:id="@+id/et_fecha_mod_sis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="date"
        android:text="Fecha de descubirmiento"
        app:layout_constraintEnd_toEndOf="@+id/et_nombre_mod_plan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_nombre_mod_plan"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_mod_plan" />

    <CheckBox
        android:id="@+id/cb_habitable_mod_sis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Â¿Sistema Solar multiple?"
        app:layout_constraintEnd_toEndOf="@+id/et_numero_mod_sis"
        app:layout_constraintStart_toStartOf="@+id/et_numero_mod_sis"
        app:layout_constraintTop_toBottomOf="@+id/et_numero_mod_sis" />

    <EditText
        android:id="@+id/et_numero_mod_sis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        android:text="Numero de Planetas"
        app:layout_constraintEnd_toEndOf="@+id/et_fecha_mod_sis"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_fecha_mod_sis"
        app:layout_constraintTop_toBottomOf="@+id/et_fecha_mod_sis" />

    <EditText
        android:id="@+id/et_nombre_mod_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=" Nombre Sistema Solar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.249" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Modificar Sistema Solar"
        app:layout_constraintBottom_toTopOf="@+id/et_nombre_mod_plan"
        app:layout_constraintEnd_toEndOf="@+id/et_nombre_mod_plan"
        app:layout_constraintStart_toStartOf="@+id/et_nombre_mod_plan" />

    <Button
        android:id="@+id/btn_aceptar_mod_sis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cancelar_mod_sis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>