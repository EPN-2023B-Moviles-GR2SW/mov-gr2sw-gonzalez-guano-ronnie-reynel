<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_layout_planeta_ver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanetasVer">

    <ListView
        android:id="@+id/lv_planeta_ver"
        android:layout_width="350dp"
        android:layout_height="520dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_crear_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/lv_planeta_ver"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/lv_planeta_ver"
        app:layout_constraintTop_toBottomOf="@+id/lv_planeta_ver" />

    <TextView
        android:id="@+id/tv_nombre_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_planeta_ver"
        app:layout_constraintEnd_toEndOf="@+id/lv_planeta_ver"
        app:layout_constraintStart_toStartOf="@+id/lv_planeta_ver"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>